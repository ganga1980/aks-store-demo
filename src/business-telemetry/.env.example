# Environment variables for local development
# Copy this file to .env and fill in your values

# General Settings
FABRIC_TELEMETRY_ENABLED=true
FABRIC_ENVIRONMENT=development
FABRIC_SERVICE_NAME=business-telemetry
FABRIC_SERVICE_VERSION=1.0.0

# Sink Configuration (console, eventhub, onelake, file)
FABRIC_SINK_TYPE=console

# Batching Settings
FABRIC_BATCH_SIZE=100
FABRIC_FLUSH_INTERVAL=5.0

# Event Hub Settings (uncomment when using eventhub sink)
# FABRIC_EVENT_HUB_CONNECTION_STRING=Endpoint=sb://your-namespace.servicebus.windows.net/;SharedAccessKeyName=...
# FABRIC_EVENT_HUB_NAME=business-telemetry
# FABRIC_EVENT_HUB_NAMESPACE=your-namespace.servicebus.windows.net

# OneLake Settings (uncomment when using onelake sink)
# FABRIC_ONELAKE_WORKSPACE_ID=your-workspace-guid
# FABRIC_ONELAKE_LAKEHOUSE_ID=your-lakehouse-guid
# FABRIC_ONELAKE_BASE_PATH=Files/business_telemetry
# FABRIC_ONELAKE_OUTPUT_FORMAT=jsonl

# File Sink Settings
FABRIC_FILE_OUTPUT_DIR=./business_telemetry_output

# API Settings
FABRIC_API_HOST=0.0.0.0
FABRIC_API_PORT=8080
# FABRIC_API_KEY=your-api-key-here

# CORS Settings
FABRIC_CORS_ORIGINS=*

# Logging
LOG_LEVEL=INFO

# Azure Identity (for managed identity auth)
FABRIC_USE_MANAGED_IDENTITY=false
# AZURE_CLIENT_ID=your-managed-identity-client-id
