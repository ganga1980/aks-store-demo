# Customer Agent Environment Variables
# Copy this file to .env and fill in your values

# Azure OpenAI Configuration
AZURE_AI_PROJECT_ENDPOINT=https://<your-openai-resource>.openai.azure.com
AZURE_AI_MODEL_DEPLOYMENT_NAME=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# Authentication Options:
# Option 1: API Key (simplest for local dev)
# AZURE_OPENAI_API_KEY=your-api-key-here

# Option 2: Azure CLI (run 'az login' first)
USE_WORKLOAD_IDENTITY_AUTH=false

# Application Insights (Optional for local development)
# APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=...

# Backend Service URLs (for local Docker Compose development)
ORDER_SERVICE_URL=http://order-service:3000
PRODUCT_SERVICE_URL=http://product-service:3002
MAKELINE_SERVICE_URL=http://makeline-service:3001

# OpenTelemetry
OTEL_SERVICE_NAME=customer-agent
OTEL_INSTRUMENTATION_GENAI_CAPTURE_MESSAGE_CONTENT=true

# Chainlit
CHAINLIT_HOST=0.0.0.0
CHAINLIT_PORT=8000

# Agent Settings
AGENT_NAME=pet-store-customer-assistant
APP_VERSION=1.0.0
