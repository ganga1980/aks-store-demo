# Admin Agent Environment Configuration
# Copy this file to .env and fill in your values

# Azure AI Foundry Configuration
AZURE_AI_PROJECT_ENDPOINT=https://your-project.services.ai.azure.com/api/projects/your-project
AZURE_AI_MODEL_DEPLOYMENT_NAME=gpt-4o

# Authentication
# Set to true for AKS with Workload Identity, false for local development with Azure CLI
USE_WORKLOAD_IDENTITY_AUTH=false

# Optional: Azure OpenAI API Key (for local development without Azure CLI)
# AZURE_OPENAI_API_KEY=your-api-key

# Azure AD Configuration (optional, for Microsoft 365 Agents SDK unique agent ID)
# These are used to generate stable, unique agent identifiers
# AZURE_TENANT_ID=your-tenant-id
# AZURE_CLIENT_ID=your-client-id

# Application Insights (optional, for Azure Monitor integration)
# APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=...

# Backend Service URLs (defaults are for Kubernetes cluster)
PRODUCT_SERVICE_URL=http://product-service:3002
MAKELINE_SERVICE_URL=http://makeline-service:3001
STORE_FRONT_URL=http://store-front:80

# OpenTelemetry Configuration
OTEL_SERVICE_NAME=admin-agent
OTEL_INSTRUMENTATION_GENAI_CAPTURE_MESSAGE_CONTENT=true

# Agent Configuration
AGENT_NAME=pet-store-admin-assistant

# Chainlit Configuration
CHAINLIT_HOST=0.0.0.0
CHAINLIT_PORT=8000
